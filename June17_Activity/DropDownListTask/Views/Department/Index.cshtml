@using System.Data
@model System.Data.DataTable
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <div>
        <h3>
            Select Department to get List Of Employees 
        </h3>
            <form id="frmDetailsByDept" method="post" action="@Url.Action("SearchByDept")">
                <label>Department Name : </label>
                <select name="txtDept">
                    <option selected>Select Dept Name</option>
                    @foreach (DataRow dr in Model.Rows)
                    {
                        <option value="@dr["Name"].ToString()">@dr["Name"].ToString()</option>
                    }
                </select>
                <input type="submit" value="Submit" name="action" />
            </form>            
    </div>
</body>
</html>
